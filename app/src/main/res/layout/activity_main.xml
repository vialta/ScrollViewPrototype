<?xml version="1.0" encoding="utf-8"?>
<qualteh.com.scrollviewprototype.CustomDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout

            android:id="@+id/contentContainer"
            android:overScrollMode="ifContentScrolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/uiContainer"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/errorText"
                    android:gravity="center"
                    android:alpha="0.1"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/vectorTest"
                    android:scaleType="center"
                    android:layout_width="1600dp"
                    android:layout_height="900dp"
                    android:layout_gravity="start"/>




            </FrameLayout>



        </FrameLayout>

        <!--
ALL NON MAP-DEDICATED UI ELEMENTS HERE
-->
        <Button
            android:id="@+id/buttonMenu"
            android:text="Meniu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"/>

        <Button
            android:id="@+id/buttonNotifications"
            android:text="Notificari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"/>

    </FrameLayout>

        <ListView
            android:id="@+id/list_sliderLeftMenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:background="@android:color/white"/>

        <ListView
            android:id="@+id/list_sliderRightMenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:background="@android:color/white"/>

</qualteh.com.scrollviewprototype.CustomDrawerLayout>